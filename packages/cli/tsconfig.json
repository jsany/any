{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "lib": [
      "ES5",
      "ES6",
      "DOM",
      "DOM.Iterable",
      "ScriptHost",
      "ES2016.Array.Include",
      "ES2017.String"
    ],
    "outDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"], // src 目录别名
      "@~/*": ["./*"] // 根目录别名
    },
    "pretty": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "typings.d.ts"],
  "exclude": ["node_modules", "**/test/*", "**/*.spec.ts", "lib", "es", "dist", "templates"]
}
